<section class="trades">
  <h2>Booked trades</h2>
  <ul>
    {{#each trades}}
      {{#unless this.isRejected}}
        {{#unless this.isConfirmed}}
          <div class="card-container" >
            <li class="card">
              <h3 class="name">{{this.service.name}}</h3>
              <p class="owner">Provider: {{this.owner.username}}</p>
              <a href="https://api.whatsapp.com/send?phone={{this.owner.contact}}">Send a message to the provider</a>
              <p class="category">{{this.service.category}}</p>
              <p class="time">{{this.service.time}}</p>
              <p class="state">{{this.consumerState}}</p>
            </li>
          {{#if message}}
            <p class="validation">{{message}}</p>
          {{/if}}
          {{#if this.isAccepted}}
          <form action="/trades/{{this.id}}/confirm" method="post" >
            <div class="field submit">
              <button class="button">Confirm</button>
            </div>
          </form>
          {{/if}}
          <form action="/trades/{{this.id}}/reject" method="post" >
            <div class="field submit">
              <button class="button">Reject</button>
            </div>
          </form>
          </div>
        {{/unless}}
      {{/unless}}
    {{/each}}
  </ul>
</section>