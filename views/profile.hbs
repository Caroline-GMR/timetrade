<section class="profile">
  <img src="{{user.url}}" alt="{{user.username}}">
  <h2>{{user.username}}</h2>
  {{#if isMyProfile}}
  <h4>Time left {{user.coins}} mins</h4>
  {{/if}}
  {{#if isMyProfile}}
    <div class="bottons">
      <a href="/services/create" class="button">Add service</a>
    </div>
  {{/if}}
  <h3>My trades</h3>
  <ul class="services">
    {{#each services}}
        <div class="card-container">
          <li class="card">
            <a href="/services/{{this.id}}">
              <img src="{{this.url}}" alt="{{this.name}}">
            </a>
            <h3 class="name">{{this.name}}</h3>
            <p class="time">{{this.time}}</p>
            {{#if ../this.isMyProfile}}
              <form action="/services/{{this.id}}/delete" method="post">
                <div class="field submit">
                  <button class="button">Delete</button>
                </div>
              </form>
            {{/if}}
          </li>
        </div>
    {{/each}}
  </ul>
</section>