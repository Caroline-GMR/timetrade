<section class="trades">
  <h2>Requested trades</h2>
  <ul>
    {{#each trades}}
      <div class="card-container" >
        <li class="card">
          <h3 class="name">{{this.service.name}}</h3>
          <p class="owner">{{this.owner.username}}</p>
          <p class="category">{{this.service.category}}</p>
          <p class="time">{{this.service.time}}</p>
          <p class="state">{{this.providerState}}</p>
        </li>
      </div>
      <form action="/trades/{{this.id}}/accept" method="post" >
        <div class="field submit">
          <button class="button">Accept</button>
        </div>
      </form>
    {{/each}}
  </ul>
</section>